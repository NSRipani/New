<h1 class="text-center m-4" >Lista de Usuarios</h1>
<div class="table-responsive"></div>
    {{#if users.length}}
    <table class="table table-striped table-hover m-5 fs-3">
        <thead class="table-light">
            <tr>
                <th scope="col">Imágen de Perfil</th>
                <th scope="col">Correo electrónico</th>
                <th scope="col">Contraseña</th>
                <th scope="col">Rol</th>
                <th scope="col">ID Usuarios</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr style="font-size: 15px;">
                <td class="align-middle">
                  <a href="/users/{{this.id}}" title="User register">
                    <img src="{{this.photo}}" alt="Foto de {{this.email}}" class="img-fluid rounded-circle" style="width: 200px; height: 170px;">
                  </a></td>
                <td class="align-middle" style="white-space: nowrap;">{{this.email}}</td>
                <td class="align-middle">
                  <input type="password" value="{{this.password}}" readonly class="form-control-plaintext" style="border: none; background: transparent; width: 100px;">
                </td>
                <td class="align-middle" style="white-space: nowrap;">{{this.role}}</td>
                <td class="align-middle" style="white-space: nowrap;">{{this.id}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
        {{else}}
        <p class="text-center text-muted">No hay usuarios disponibles.</p>
        {{/if}}
    </div>
</div>