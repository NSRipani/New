<div class="d-flex justify-content-center "></div>
    <div class="container m-5 shadow p-4 rounded">
        <h1 class="text-center">Iniciar Sesión</h1>
        <form method="POST" action="/users/admin">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" autocomplete="on">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" autocomplete="current-password" id="password" name="password" required>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a href="/users/register">¿No tienes una cuenta? Regístrate</a>
        </div>
    </div>
</div>
